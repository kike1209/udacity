def rot13(s):
    abcd=['a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','x','y','z']
    l = len(abcd)
    s2=''
    for i in range(len(s)):
        if s[i] not in abcd:
            s2 += s[i]	# keep punctuation characters
        else:
            #print abcd.index(s[i]), abcd.index(s[i])+13, (abcd.index(s[i])+13) % l
            s2 += abcd[(abcd.index(s[i]) + 13) % l]
    return s2
