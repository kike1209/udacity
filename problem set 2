#import cgi
import webapp2

form="""
<html>
  <head>
    <title>Unit 2 Rot 13</title>
  </head>

  <body>
    <h2>Enter some text to ROT13:</h2>
    <form method="post">
      <textarea name="text" rows="10" cols="50">
      %(textrot13)s          
      </textarea>
      <br>
      <input type="submit">
    </form>
  </body>

</html>
"""

def esc_html(s):
    esc_dicc = {'<':'&lt;', '>':'&gt;', '"':'&quot;', '&':'&amp;'}
    s = s.replace(r'<', esc_dicc['<'])
    s = s.replace(r'>', esc_dicc['>'])
    s = s.replace(r'"', esc_dicc['"'])
    s = s.replace(r'&', esc_dicc['&'])
    return s

    
def rot13(s):
    abcd = 'abcdefghikjlmnopqrstuvwxyz'
    ABCD = abcd.upper()
    abcd_len = len(abcd)
    s2 = ''
    for i in range(len(s)):
        cc = s[i]
        if cc.isalpha():
            if cc in abcd:
                cc = abcd[(abcd.index(cc) + 13) % abcd_len]
            else:
                cc = ABCD[(ABCD.index(cc) + 13) % abcd_len]
        s2 += cc
    return esc_html(s2)


class MainPage(webapp2.RequestHandler):
    def write_form(self, text=""):
        self.response.out.write(form % {'textrot13': text})
                                        
    def get(self):
        self.write_form()
        
    def post(self):
        user_text = self.request.get('text')
        rot13_text = rot13(user_text)
        self.response.out.write('['+rot13_text+']') ###########
        self.write_form(rot13_text)
        

application = webapp2.WSGIApplication([('/', MainPage)], debug=True)
